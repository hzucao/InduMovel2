@model ReflectionIT.Mvc.Paging.PagingList<InduMovel.Models.Movel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<form method="get" class="form-inline">
    
    <input name="filtro" class="form-control" placeholder="filtro"
           value="@Model.RouteValue["Filtro"]" />

    <button type="submit" class="btn btn-info">Procurar</button>
</form>

Total de Moveis : @Model.TotalRecordCount
<div>
   <vc:pager paging-list="@Model"></vc:pager>
</div>


<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descricao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImagemUrl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImagemPequena)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Valor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmProducao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ativo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Categoria)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descricao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ImagemUrl)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ImagemPequena)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Valor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmProducao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ativo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Categoria.Nome)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.MovelId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.MovelId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.MovelId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
